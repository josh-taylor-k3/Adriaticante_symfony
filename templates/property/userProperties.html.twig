{% extends 'base.html.twig' %}

{% block body %}
    <div class="container text-center my-5 border-bottom">
        <h2 class="display-4 text-uppercase">{% trans %}Overview{% endtrans%}</h2>
    </div>

    <!-- TEst -->
    <div class="container">
        <div class="row">
            <div class="col-md-10 offset-md-1 col-xl-8 offset-xl-2">
                {% for property in userProperties %}
                    <div class="card mb-3 rounded-0 shadow-sm border-0">
                        <div class="row g-0">
                            <div class="col-6 col-md-5">
                                <img src="{{ asset('uploads/property/' ~ property.images.first) | imagine_filter('medium') }}" class="img-fluid " alt="{{ property.name }}" style="height: 200px; width: 400px">
                            </div>
                            <div class="d-flex align-items-center col-6 col-md-7">
                                <div class="card-body">
                                    <p class="card-title text-center text-uppercase display-6 fs-5 fw-normal pb-1">{{ property.name }}</p>
                                    <div class="text-center">
                                        <a href="{{ path('properties_details', {'slug': property.slug}) }}"><button class="btn btn-primary btn-sm rounded-0 text-uppercase">{% trans %}Check{% endtrans%}</button></a>
                                        <button type="button" class="btn btn-danger btn-sm rounded-0 text-uppercase" data-bs-toggle="modal" data-bs-target="#deleteModal{{ property.id }}">
                                            {% trans %}Delete{% endtrans%}
                                        </button>
                                        <!-- Modal -->
                                        <div class="modal fade" id="deleteModal{{ property.id }}" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                                            <div class="modal-dialog">
                                                <div class="modal-content">
                                                    <div class="modal-header">
                                                        <h5 class="modal-title" id="exampleModalLabel">{% trans %}DELETE AD{% endtrans%}</h5>
                                                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                                    </div>
                                                    <div class="modal-body">
                                                        {% trans %}Are you sure you want to permanently delete this ad?{% endtrans%}
                                                    </div>
                                                    <div class="modal-footer">
                                                        <a href="{{ path('properties_delete', {'slug': property.slug}) }}"><button type="button" class="container btn btn-danger rounded-0 ms-2 text-uppercase">{% trans %}Delete{% endtrans%}</button></a>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="pt-1">
                                            <p class="card-text"><small class="text-muted">{% trans %}Posted{% endtrans%} : {{ property.createdAt|date("m/d/Y") }}</small></p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>

{% endblock %}

{% block title %}

{% endblock %}

