{{ form_widget(form._token) }}
        {{ form_errors(form) }}

<div class="row">
    <div class="col-md-4 offset-md-4">{{ form_row(form.advertType) }}</div>
</div>
<div class="text-center my-5 border-bottom">
    <h2 class="display-6">{% trans %}Real Estate Informations{% endtrans%}</h2>
</div>
<div class="row">
    <div>{{ form_row(form.name) }}</div>
</div>
<div class="row">
    <div class="col-6">{{ form_row(form.price) }}</div>
    <div class="col-6">{{ form_row(form.area) }}</div>
</div>
<div class="row">
    <div>{{ form_row(form.description) }}</div>
</div>
<div class="row">
    <div class="col-6">{{ form_row(form.type) }}</div>
    <div class="col-6">{{ form_row(form.city) }}</div>
</div>
<div class="row">
    <div class="col-4">{{ form_row(form.totalRooms) }}</div>
    <div class="col-4">{{ form_row(form.totalBathrooms) }}</div>
    <div class="col-4">{{ form_row(form.totalBedrooms) }}</div>
</div>
<!-- Asset -->
<div class="text-center my-5 border-bottom">
    <h2 class="display-6">{% trans %}Features{% endtrans%}</h2>
</div>
<div class="row">
    <p class="text-center display-6 fs-5">Click the button for each new feature</p>
    <button type="button" class="col-md-6 offset-md-3 container text-center btn btn-primary rounded-0 my-4 text-uppercase btn-new" data-collection="#assets">{% trans %}Add Features{% endtrans%}
    </button>
    {{ form_errors(form.features) }}
</div>

<div
        id="assets"
        class="row"
        data-prototype="{{ include('property/_feature.html.twig', {form: form.features.vars.prototype})|e("html_attr") }}"
        data-index="{{ form.features|length > 0 ? form.features|last.vars.name + 1 : 0 }}">
    {% for feature in form.features %}

            {{ include('property/_feature.html.twig', {form: feature}) }}

    {% endfor %}
</div>

<div class="text-center my-5 border-bottom">
    <h2 class="display-6">{% trans %}Agency Informations{% endtrans%}</h2>
</div>
<div class="row">
    <div class="col-md-8 offset-md-2">{{ form_row(form.linkWebsite) }}</div>
</div>
<div class="row">
    <div class="col-md-4 offset-md-2">{{ form_row(form.nameContact) }}</div>
    <div class="col-md-4">{{ form_row(form.phoneContact) }}</div>
</div>
<div class="text-center my-5 border-bottom">
    <h2 class="display-6">{% trans %}Upload Files{% endtrans%}</h2>
</div>
<div class="row">
    <p class="text-center display-6 fs-5">Click the button for each new feature</p>
    <button type="button" class="col-md-6 offset-md-3 container text-center btn btn-primary rounded-0 my-4 text-uppercase btn-new" data-collection="#files">{% trans %}Add Files{% endtrans%}
    </button>
    {{ form_errors(form.files) }}
</div>

<div class="row">
    <div
            id="files"
            data-prototype="{{ include('property/_file.html.twig', {form: form.files.vars.prototype})|e("html_attr") }}"
            data-index="{{ form.files|length > 0 ? form.files|last.vars.name + 1 : 0 }}">
        {% for file in form.files %}

            {{ include('property/_file.html.twig', {form: file}) }}

        {% endfor %}
    </div>
</div>
<div class="text-center my-5 border-bottom">
    <h2 class="display-6">{% trans %}Captcha{% endtrans%}</h2>
</div>
<div class="row">
    <div class="col-8 col-md-4 offset-2 offset-md-4 text-center">{{ form_row(form.captcha) }}</div>
</div>

<div class="text-center my-5 border-bottom">
</div>
