{% extends 'base.html.twig' %}

{% block title %}Hello PropertiesController!{% endblock %}

{% block body %}

    <div class="text-center my-5">
        <h1 class="display-4">PROPERTIES</h1>
    </div>

    <div class="container-fluid my-5">

        <div class="container">

            <div class="row">
            {% for property in properties %}
                <div
                        class="col-10 offset-1 col-md-6 offset-md-0 col-xl-3 my-4"
                >
                    <div class="card rounded-0">
                        <img
                                src="{{ asset('img/img/triesteM.jpg') }}"
                                class="card-img-top rounded-0"
                                alt="..."
                        />
                        <div class="card-body">
                            <h5 class="card-title text-center cardPropertyTitle">{{ property.name|upper }}</h5>
                            <div class="cardPropertyDescription">
                                <p class="card-text">
                                    Area : {{ property.area }} m2
                                </p>
                                <p class="card-text">
                                    Rooms : {{ property.totalRooms }}
                                </p>
                                <p class="card-text">
                                    Bedrooms : {{ property.totalBedrooms }}
                                </p>
                                <p class="card-text">
                                    Bathrooms : {{ property.totalBathrooms }}
                                </p>
                            </div>
                            <div class="text-center">
                                <a href="{{ path('properties_details', {'id': property.id}) }}" class="btn btn-primary rounded-0">DISCOVER</a>
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
            </div>
        </div>
        <div class="d-flex justify-content-center">
            {% do properties.setPageRange(2) %}
            {{ knp_pagination_render(properties, 'base/pagination.html.twig') }}
        </div>
    </div>

{% endblock %}
