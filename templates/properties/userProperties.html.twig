{% extends 'base.html.twig' %}

{% block body %}
    <div class="container text-center my-5 border-bottom">
        <h2 class="display-4 text-uppercase">Overview</h2>
    </div>
    <div class="container">
        <table class="table table-hover text-center">
            <thead>
            <tr class="text-uppercase">
                <th>Real Estate</th>
                <th>Price</th>
                <th>Area</th>
                <th>Contact</th>
                <th colspan="2">Action</th>
            </tr>
            </thead>
            <tbody class="text-uppercase">
            {% for property in userProperties %}
                <tr>
                    <th>{{ property.name }}</th>
                    <td>{{ property.price }}</td>
                    <td>{{ property.area }}</td>
                    <td>{{ property.nameContact }}</td>
                    <td><a href="{{ path('properties_details', {'id': property.id}) }}"><button class="btn btn-primary rounded-0 ms-2 text-uppercase">Check</button></a></td>
                    <td><a href="#"><button class="btn btn-danger rounded-0 ms-2 text-uppercase">Delete</button></a></td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}

{% block title %}

{% endblock %}

