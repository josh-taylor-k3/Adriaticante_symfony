<!-- Toast -->
<div class="toast show" data-controller="cookies">
    <div class="toast-header">
        {% trans %}Manage cookies{% endtrans %}
    </div>
    <div class="toast-body">
        {% trans %}We use cookies to offer you a better browsing experience, analyze site traffic, personalize content, and serve targeted advertisements. Read about how we use cookies and how you can control them by clicking "Cookie Settings." If you continue to use this site, you consent to our use of cookies.{% endtrans %}
    </div>
    <div class="toast-footer">
        <button id="texte" style="color:red" class="btn btn-primary btn-sm rounded-0 me-2 text-uppercase">{% trans %}Accept{% endtrans%}</button>
        <button class="btn btn-danger btn-sm rounded-0 me-2 text-uppercase">{% trans %}Reject{% endtrans%}</button>
    </div>
</div>