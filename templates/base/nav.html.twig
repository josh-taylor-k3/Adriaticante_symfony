                            </ul>
                            <div class="text-center">
                                <a href="{{ path('app_login') }}"><button class="btn btn-primary rounded-0 mt-4 text-uppercase shadow-none">{% trans %}Sign in{% endtrans%}</button></a>
                            </div>
                        {% endif %}

                        <div class="text-center py-3">
                            {% for locale in locales %}
                                {% if locale != app.request.locale %}
                                    <a href="{{ path('change_locale', {'locale': locale}) }}">
                                        <img src="{{ asset('build/img/img/flag/'~locale~'.png') }}" style="height: 20px; width: 35px" alt="{{ locale }}">
                                    </a>
                                {% endif %}
                            {% endfor %}
                        </div>

                    </div>
                </div>
            </div>
        </div>
