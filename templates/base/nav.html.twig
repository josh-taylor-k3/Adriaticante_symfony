                                </a>
                            </ul>
                            <ul class="list-group list-group-flush my-4">
                                <a class="fs-6" href="{{ path('property') }}">
                                    <li class="list-group-item list-group-item-action border-0 display-6 fs-5">{% trans %}Real Estate{% endtrans%}</li>
                                </a>
                                <a class="fs-6" href="{{ path('about') }}">
                                    <li class="list-group-item list-group-item-action border-0 display-6 fs-5">{% trans %}About{% endtrans%}</li>
                                </a>
                                <a class="fs-6" href="{{ path('contact') }}">
                                    <li class="list-group-item list-group-item-action border-0 display-6 fs-5">{% trans %}Contact{% endtrans%}</li>
                                </a>
                                <a class="fs-6" href="{{ path('app_logout') }}"><li class="list-group-item list-group-item-action text-danger border-0 display-6 fs-5 fw-normal">{% trans %}Logout{% endtrans%}</li></a>

                            </ul>

                            <div class="text-center">
                                <a href="{{ path('properties_create') }}"><button class="btn btn-primary rounded-0 mt-4 text-uppercase shadow-none"><i class="fa-regular fa-square-plus"></i>&ensp;{% trans %}new real estate{% endtrans%}</button></a>
