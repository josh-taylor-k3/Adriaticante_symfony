                                    <li class="list-group-item list-group-item-action border-0 display-6 fs-5">{% trans %}Dashboard{% endtrans%}</li>
                                </a>
                                <a class="fs-6" href="{{ path('user_properties') }}">
                                    <li class="list-group-item list-group-item-action border-0 display-6 fs-5">{% trans %}My Real Estate{% endtrans%}</li>
                                </a>
                                <a class="fs-6" href="{{ path('profile') }}">
                                    <li class="list-group-item list-group-item-action border-0 display-6 fs-5">{% trans %}Profile{% endtrans%}</li>
                                </a>
                                <a class="fs-6" href="{{ path('messages') }}">
                                    <li class="list-group-item d-flex justify-content-between align-items-center border-0 display-6 fs-5">
                                        {% trans %}Messages{% endtrans%}
                                        {% if total_thread_not_read['totalNotRead']|length > 0 %}
                                            <span class="badge bg-secondary rounded-3 text-primary">{{ total_thread_not_read['totalNotRead'] }}</span>
                                        {% endif %}
                                    </li></a>
                                <a class="fs-6" href="{{ path('app_logout') }}">
                                    <li class="list-group-item list-group-item-action text-danger border-0 display-6 fs-5 fw-normal">{% trans %}Logout{% endtrans%}</li>
                                </a>
                            </ul>
                            <ul class="list-group list-group-flush mt-4">
                                <a class="fs-6" href="{{ path('property') }}">
                                    <li class="list-group-item list-group-item-action border-0 display-6 fs-5">{% trans %}Real Estate{% endtrans%}</li>
                                </a>
                                <a class="fs-6" href="{{ path('about') }}">
                                    <li class="list-group-item list-group-item-action border-0 display-6 fs-5">{% trans %}About{% endtrans%}</li>
                                </a>
                                <a class="fs-6" href="{{ path('contact') }}">
                                    <li class="list-group-item list-group-item-action border-0 display-6 fs-5">{% trans %}Contact{% endtrans%}</li>
                                </a>
                                <div class="text-center">
                                    <a href="{{ path('properties_create') }}">
                                        <button class="btn btn-primary rounded-0 mt-4 text-uppercase shadow-none"><i class="fa-regular fa-square-plus"></i>&ensp;{% trans %}new real estate{% endtrans%}</button>
                                    </a>
                                </div>
                            </ul>
                        {% elseif is_granted('ROLE_USER') %}
                            <ul class="list-group list-group-flush">
                                <a class="fs-6" href="{{ path('profile') }}">
                                    <li class="list-group-item list-group-item-action border-0 display-6 fs-5">{% trans %}Profile{% endtrans%}</li>
                                </a>
                                <a class="fs-6" href="{{ path('user_properties') }}">
                                    <li class="list-group-item list-group-item-action border-0 display-6 fs-5">{% trans %}My Real Estate{% endtrans%}</li>
                                </a>
                                <a class="fs-6" href="{{ path('messages') }}">
