{% set total_thread_not_read = threads_not_read(app.user) %}
    <nav class="navbar navbar-light fixed-top bg-white shadow-sm" style="height: 80px;">
        <div class="container-fluid">
            <div class="col-4">
                <a href="{{ path('home') }}" class="navbar-brand"
                ><img src="{{ asset('build/img/logo/Logo.svg') }}" alt="logo" width="180" height="43"
                    /></a>
            </div>
            <div class="col-8">
                <div class="text-end">
                    <a
                            class=""
                            data-bs-toggle="offcanvas"
                            href="#offcanvasNavbar"
                            role="button"
                            aria-controls="offcanvasNavbar"
                    >
                        <img src="{{ asset('build/img/icon/MenuK.png') }}" alt="menu" height="40" />
