{% extends 'base.html.twig' %}

{% block title %}Homepage{% endblock %}



{% block body %}



    <!-- CAROUSEL -->

    <div id="carouselExampleCaptions" class="carousel slide" data-bs-ride="carousel">
        <div class="carousel-indicators">
            <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
            <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="1" aria-label="Slide 2"></button>
            <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="2" aria-label="Slide 3"></button>
        </div>
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="{{ asset('build/img/img/carousel6XL.jpg') | imagine_filter('carousel') }}" class="d-block w-100" alt="...">
                <div class="carousel-caption d-none d-md-block px-4 mb-5">
                    <h1 class="display-5 text-shadow">Discover your future home</h1>
                    {{ form_start(formSearch) }}
                    <div class="row bg-white rounded-1 pt-4 pb-2 px-4">
                        <div class="col-3">
                            {{ form_row(formSearch.advertType) }}
                        </div>
                        <div class="col-3">
                            {{ form_row(formSearch.type) }}
                        </div>
                        <div class="col-3">
                            {{ form_row(formSearch.city) }}
                        </div>
                        <div class="col-3">
                            <button type="submit" class="btn btn-primary container rounded-0 text-uppercase">{% trans %}Search{% endtrans%}</button>
                        </div>
                    </div>
                    {{ form_end(formSearch, {render_rest: false}) }}
                </div>
            </div>
            <div class="carousel-item">
                <img src="{{ asset('build/img/img/carousel7XL.jpg') | imagine_filter('carousel') }}" class="d-block w-100" alt="...">
                <div class="carousel-caption d-none d-md-block text-start px-4 mb-5">
                    <h2 class="display-4 text-shadow text-uppercase mb-4">Sell your real estate</h2>
                    {% if is_granted('ROLE_USER') %}
                        <a href="{{ path('properties_create') }}"><button class="btn btn-info btn-lg rounded-0 text-uppercase my-1">{% trans %}New real estate{% endtrans%}</button></a>
                    {% else %}
                        <a href="{{ path('app_register') }}"><button class="btn btn-info btn-lg rounded-0 text-uppercase my-1">{% trans %}Register{% endtrans%}</button></a>
                    {% endif %}
                </div>
            </div>
            <div class="carousel-item">
                <img src="{{ asset('build/img/img/carousel10XL.jpg') | imagine_filter('carousel') }}" class="d-block w-100" alt="...">
                <div class="carousel-caption d-none d-md-block text-end px-4 mb-5">
                    <p class="display-5 text-shadow">Communicate with</p><p class="display-5 text-primary text-shadow"> your interlocutor</p>
                </div>
            </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>


    <!-- DISCOVER -->
    <div class="text-center my-5">
        <h2 class="display-4 text-uppercase">{% trans %}Discover{% endtrans%}</h2>
    </div>
    <div class="container-fluid my-5">
        <div class="container">
            <div class="row text-uppercase">
                <div data-aos="fade-right"
                        class="col-10 offset-1 col-lg-6 offset-lg-3 col-xl-4 offset-xl-1 my-4"
                >
